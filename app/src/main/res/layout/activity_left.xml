<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/left_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shpp_admin.myapplication.LeftActivity"
    android:focusableInTouchMode="false" android:isScrollContainer="false">


    <EditText
        android:id="@+id/editTotal"
        style="@style/edit_text_style"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/left_total"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/editDays"
        android:layout_alignLeft="@+id/editDays"
        android:layout_alignStart="@+id/editDays" />

    <EditText
        android:id="@+id/editDays"
        style="@style/edit_text_style"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/left_days"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:layout_above="@+id/editEconomy"
        android:layout_alignLeft="@+id/editEconomy"
        android:layout_alignStart="@+id/editEconomy"
        android:layout_marginBottom="27dp" />

    <EditText
        android:id="@+id/editEconomy"
        style="@style/edit_text_style"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/left_economy"
        android:ems="10"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/buttonRight2"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/direction_left" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/editEconomy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/buttonCommit" />

</RelativeLayout>
