<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shpp_admin.myapplication.RightActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editValue"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:ems="10"
        android:hint="Затраты"
        android:inputType="number"
        style="@style/spending_texts"/>

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editValue"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:hint="Название"
        style="@style/spending_texts" />

    <ImageButton
        android:id="@+id/buttonLeft2"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:background="@drawable/direction_right"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editValue"
        android:layout_alignStart="@+id/editValue" />

    <ImageButton
        android:layout_below="@+id/editCategory"
        android:layout_width="150dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/right_input_field"
        android:id="@+id/buttonAdd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:layout_below="@+id/buttonAdd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp">
    </ListView>

    <TextView
        android:layout_width="50dp"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/listView"
        android:layout_toStartOf="@+id/listView"
        android:id="@+id/buttonOK"
        style="@style/spending_texts"/>

</RelativeLayout>
