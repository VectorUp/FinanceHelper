<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="left_edit">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/left_edit_brown</item>
    </style>

    <style name="spending_texts">
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/main_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
